    fileHash: [ubyte];
    fileSize: [ubyte];
}

table RemoveActionBuffer {
    fileHash: [ubyte];
}

table FileBuffer {
    fileHash: [ubyte];
}

table DriveFileSystemTransactionBuffer {
    size: uint;
    signature: [ubyte];
