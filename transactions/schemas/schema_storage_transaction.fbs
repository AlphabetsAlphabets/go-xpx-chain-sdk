namespace Catapult.Buffers;

table PrepareDriveTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline:[uint];
    owner:[ubyte];
    duration:[uint];
    billingPeriod:[uint];
    billingPrice:[uint];
    driveSize:[uint];
    replicas:ushort;
    minReplicators:ushort;
    percentApprovers:ubyte;
}

table JoinToDriveTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline:[uint];
    driveKey:[ubyte];
}

